<i>&nbsp;Here are your requests for your spaces, <%= current_user.username %></i></br></br>

<div>
<% @all_my_spaces.each do |space| %>
  <% space.bookings.each do |booking| %>
  <div class="box">
    <span class="space-listing">Name:</span> <%=space.name%></br>
    <span class="space-listing">Description:</span> <%= space.description %></br>
    <span class="space-listing">Price per night:</span> Â£<%= space.price %></br>
    <span class="space-listing">Requested from:</span> <%= space.from_date.strftime('%d %B %Y') %></br>
    <span class="space-listing">Requested to:</span> <%= space.to_date.strftime('%d %B %Y') %></br>
    <span class="space-listing">Confirmation Status:</span> <%= booking.confirmed %></br>
    <span class="space-listing">Requested by:</span><%= booking.user.full_name %></br>
    <form method="POST" action="/requests/approve/<%= booking.space_id %>/<%= booking.user.id %>">
    <input type="submit" value="Approve">
  </form>
  <% end %>
  </div></br>
<% end %>
</div>
