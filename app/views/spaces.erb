    <h1 class="header">Available spaces</h1>
    <div>
      <% @spaces.each do |space| %>
        <% unless space.bookings.any? { |booking| booking.confirmed } %>
          <div class="space-listing">
            Name: <%= space.name %></br>
            Description: <%= space.description %></br>
            Price per night: Â£<%= space.price %></br>
            Available from: <%= space.from_date.strftime('%d %B %Y') %></br>
            Available to: <%= space.to_date.strftime('%d %B %Y') %></br>
            <image src="<%= space.media %>" style="width:20%"/></br>
          <% if current_user %>
            <div class="mt-1 centre-button">
              <form method="POST" action="/bookings/new/<%= space.id %>">
              <input type="submit" value="Book">
            </form></div>
          <% end %>
        </div></br>
      <% end %>
    <% end %>
  </div>
